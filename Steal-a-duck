local Players = game:GetService("Players")
local lp = Players.LocalPlayer

-- Xo√° GUI c≈© n·∫øu c√≥
if game.CoreGui:FindFirstChild("TpGui") then
    game.CoreGui.TpGui:Destroy()
end

-- T·∫°o GUI
local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "TpGui"

-- Bi·∫øn l∆∞u v·ªã tr√≠ v√† tr·∫°ng th√°i Auto TP
local savedPos = nil
local autoTp = false

-- H√†m Teleport
local function doTeleport()
    if not savedPos then return end
    local hrp = lp.Character and lp.Character:FindFirstChild("HumanoidRootPart")
    if hrp then
        local currentPos = hrp.CFrame
        hrp.CFrame = savedPos
        task.wait(0.5)
        hrp.CFrame = currentPos
    end
end

-- N√∫t L∆∞u v·ªã tr√≠ (Cam, tr√≤n nh·ªè)
local saveBtn = Instance.new("TextButton")
saveBtn.Size = UDim2.new(0, 40, 0, 40)
saveBtn.Position = UDim2.new(1, -90, 0, 20) -- G√≥c ph·∫£i ph√≠a tr√™n
saveBtn.BackgroundColor3 = Color3.fromRGB(255, 140, 0)
saveBtn.Text = "üìå"
saveBtn.TextColor3 = Color3.new(1, 1, 1)
saveBtn.Font = Enum.Font.SourceSansBold
saveBtn.TextScaled = true
saveBtn.Parent = gui
Instance.new("UICorner", saveBtn).CornerRadius = UDim.new(0, 999)

-- N√∫t Auto TP (Xanh, tr√≤n nh·ªè)
local tpBtn = Instance.new("TextButton")
tpBtn.Size = UDim2.new(0, 40, 0, 40)
tpBtn.Position = UDim2.new(1, -45, 0, 20) -- C·∫°nh b√™n n√∫t cam
tpBtn.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
tpBtn.Text = "‚ö°"
tpBtn.TextColor3 = Color3.new(1, 1, 1)
tpBtn.Font = Enum.Font.SourceSansBold
tpBtn.TextScaled = true
tpBtn.Parent = gui
Instance.new("UICorner", tpBtn).CornerRadius = UDim.new(0, 999)

-- Khi b·∫•m L∆∞u v·ªã tr√≠
saveBtn.MouseButton1Click:Connect(function()
    if lp.Character and lp.Character:FindFirstChild("HumanoidRootPart") then
        savedPos = lp.Character.HumanoidRootPart.CFrame
        saveBtn.Text = "‚úÖ"
        task.wait(0.5)
        saveBtn.Text = "üìå"
    end
end)

-- Khi b·∫•m Auto TP
tpBtn.MouseButton1Click:Connect(function()
    if not savedPos then return end
    autoTp = not autoTp
    if autoTp then
        tpBtn.Text = "‚è≥"
        while autoTp do
            doTeleport()
            task.wait(60.5)
        end
    else
        tpBtn.Text = "‚ö°"
    end
end)
