-- üõ°Ô∏è Script ch·ªâ ch·∫∑n th√¥ng b√°o / popup, kh√¥ng xo√° UI gameplay
local CoreGui = game:GetService("CoreGui")
local StarterGui = game:GetService("StarterGui")

-- H√†m ki·ªÉm tra xem UI c√≥ ph·∫£i notify kh√¥ng
local function isNotification(obj)
    local name = obj.Name:lower()
    return name:find("notify") or name:find("notification") or name:find("purchase") or name:find("product")
end

-- Xo√° t·∫•t c·∫£ notify ƒëang t·ªìn t·∫°i
for _, v in pairs(CoreGui:GetDescendants()) do
    if (v:IsA("Frame") or v:IsA("TextLabel") or v:IsA("TextButton")) and isNotification(v) then
        v:Destroy()
    end
end

-- T·ª± ƒë·ªông xo√° notify m·ªõi xu·∫•t hi·ªán
CoreGui.DescendantAdded:Connect(function(v)
    if (v:IsA("Frame") or v:IsA("TextLabel") or v:IsA("TextButton")) and isNotification(v) then
        task.wait()
        v:Destroy()
    end
end)

-- NgƒÉn ch·∫∑n game g·ªçi StarterGui:SetCore("SendNotification")
pcall(function()
    StarterGui:SetCore("SendNotification", function() return end)
end)
