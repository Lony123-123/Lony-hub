local Players = game:GetService("Players")
local player = Players.LocalPlayer
local block = workspace:WaitForChild("gnoyP")
local PlayerGui = player:WaitForChild("PlayerGui")
local cam = workspace.CurrentCamera

-- Xoá GUI cũ
for _, gui in pairs(PlayerGui:GetChildren()) do
if gui.Name == "BlockTouchGUI" then
gui:Destroy()
end
end

-- Tạo GUI mới
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "BlockTouchGUI"
screenGui.Parent = PlayerGui

-- Tạo nút tròn
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 40, 0, 40)
button.Position = UDim2.new(1, -50, 0, 10)
button.BackgroundColor3 = Color3.fromRGB(255, 100, 100)
button.Text = ""
button.BorderSizePixel = 0
button.AutoButtonColor = true
button.AnchorPoint = Vector2.new(1, 0)
button.Parent = screenGui

local uicorner = Instance.new("UICorner")
uicorner.CornerRadius = UDim.new(0, 20)
uicorner.Parent = button

-- Hàm teleport mà camera không bị theo
local function teleportToBlock()
local char = player.Character
if char and char:FindFirstChild("HumanoidRootPart") and block then
local hrp = char.HumanoidRootPart
local oldCFrame = hrp.CFrame

-- Lưu camera  
    local oldCamType = cam.CameraType  
    local oldCamCFrame = cam.CFrame  

    -- Chuyển camera sang Scriptable  
    cam.CameraType = Enum.CameraType.Scriptable  
    cam.CFrame = oldCamCFrame  

    -- Teleport tới block cực nhanh  
    hrp.CFrame = block.CFrame + Vector3.new(0, 3, 0)  
    wait(0.001) -- delay cực ngắn, mắt thường không thấy  

    -- Quay về vị trí cũ  
    hrp.CFrame = oldCFrame  

    -- Khôi phục camera  
    cam.CameraType = oldCamType  
    cam.CFrame = oldCamCFrame  
end

end

button.MouseButton1Click:Connect(teleportToBlock)
